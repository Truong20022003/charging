<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_090327">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCycle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/voltage"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tvVol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="4.120 V"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/battery_status"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tvHeart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/good"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/temperature"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/template"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="4.120 V"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/capacity"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tvCapacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="4.120 V"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>



                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/charging_type"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="4.120 V"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/battery_bg_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_7sdp">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_horizontal" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="@string/technology"
                            android:textColor="@color/color_8E8E8E"
                            android:textSize="@dimen/_11ssp" />

                        <com.charging.animation.mobile.battery.custom.view.CustomTextView
                            android:id="@+id/tvLion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:text="4.120 V"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imgCycle"
        android:layout_width="@dimen/_194sdp"
        android:layout_height="@dimen/_194sdp"
        android:layout_marginTop="@dimen/_23sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_112sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imgCycle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgCycle" />


    <LinearLayout
        android:id="@+id/tvPinInfo"
        android:layout_width="@dimen/_68sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView12">

        <LinearLayout
            android:id="@+id/imgPin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="bottom"
            android:background="@drawable/battery_bg_batter_info_1"
            android:orientation="horizontal" />
    </LinearLayout>

    <com.charging.animation.mobile.battery.custom.view.CustomTextView
        android:id="@+id/tvPin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="90%"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPinInfo"
        app:layout_constraintEnd_toEndOf="@+id/tvPinInfo"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/tvPinInfo" />


    <ImageView
        android:id="@+id/connect"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_84sdp"
        android:layout_marginTop="@dimen/_minus12sdp"
        app:layout_constraintEnd_toEndOf="@+id/tvPinInfo"
        app:layout_constraintStart_toStartOf="@+id/tvPinInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvPin3" />


</androidx.constraintlayout.widget.ConstraintLayout>